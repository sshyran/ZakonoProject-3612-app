<div class="columns user-header"></div>

<div class="row data-portability">
  <% if @account.email.present? %>
    <div class="columns large-6 large-offset-3 end">
      <div class="callout">
        <strong><%= t(".download_data") %></strong>
        <p><%= t(".download_data_description", user_email: current_user.email).html_safe %></p>
        <%= button_to t(".request_data"), export_data_portability_path, class: "button expanded", data: { disable: true } %>
      </div>
    </div>
  <% end %>
</div>
